---
import { Image } from 'astro:assets';
import motionLogo from '../assets/motionlogo.gif';
import loading from '../assets/loading.svg';
---

<div id="topView">
  <Image class="logo" src={motionLogo} alt="Motion Logo" />
  <Image class="guide" src={loading} alt="Loading" />
</div>

<style lang="scss">
#topView {
  position: relative;
  background-color: #03635B;
  height: 100vh;
  
  .logo {
    max-width: 80%;
    max-height: 100%;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
    object-fit: contain;
  }
  
  .guide {
    width: 80px;
    height: 80px;
    max-height: 15vh;
    transform: rotate(180deg);
    position: absolute;
    bottom: 5vh;
    left: 0;
    right: 0;
    margin: auto;
  }
}

@keyframes rotation {
  0% {
    bottom: 5vh;
  }
  20% {
    bottom: 4vh;
  }
  100% {
    bottom: 5vh;
  }
}
</style>
